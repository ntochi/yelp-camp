<%- include('partials/header') %>

<div class="container">
		<h1 class="text-center">Create New Campground</h1>
	
		<div class="form mx-auto my-5">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Camp name" name="name">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" placeholder="Image url" name="image">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" placeholder="Description" name="description">
				</div>

				<div class="form-group">
					<button class="btn btn-primary btn-block" type="submit">Add</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
</div>


<%- include('partials/footer') %>